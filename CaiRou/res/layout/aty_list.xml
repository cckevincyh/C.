<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:background="#f7f7f7"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
        android:id="@+id/layout_header"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >


        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="5dp"
            >
            <EditText
            android:id="@+id/aty_list_et_search"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColorHint="@android:color/darker_gray"
            android:background="@drawable/shape_search_edittext"
            android:hint="搜索" />
            
            <com.gc.materialdesign.views.ButtonIcon
                android:id="@+id/aty_list_btn_buttonIcon"
                android:layout_marginRight="5dp"
               	android:layout_alignParentRight="true"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="#1E88E5"
                materialdesign:iconDrawable="@drawable/ic_search_48pt" />
            
            
        </RelativeLayout>

    </LinearLayout>
    <com.yydcdut.sdlv.SlideAndDragListView
        android:id="@+id/aty_list_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_header"
        android:layout_marginTop="5dp"
        android:dividerHeight="1sp"
        android:divider="@android:color/darker_gray"
        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:paddingTop="3dp" >
    </com.yydcdut.sdlv.SlideAndDragListView>
    
    <!-- 
    
     -->
     
    <com.gc.materialdesign.views.ButtonFloat
        android:id="@+id/buttonFloat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="8dp"
        android:background="#1E88E5"
        materialdesign:animate="true"
        materialdesign:iconDrawable="@drawable/ic_action_new"
        ></com.gc.materialdesign.views.ButtonFloat>

               

</RelativeLayout>